<div class="container center" data-controller='word'>
<h1 style="text-align: center; padding: 50px">New Game</h1>
    <h4 class="d-flex justify-content-between"><% @letters.each do |letter| %><span class="btn btn-outline-info p-3"><%= letter %></span><% end %></h4>
  <form action="/score" method="POST" data-turbo="false">
  <h3>What is the longest word you can find?</h3>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <input type="text" name='word'>
  <input type="submit">
</form>
</div>
